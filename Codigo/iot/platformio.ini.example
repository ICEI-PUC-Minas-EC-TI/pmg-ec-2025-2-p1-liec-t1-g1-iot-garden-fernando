; PlatformIO Project Configuration File
;
; Copy this file to platformio.ini and update the [credentials] section
; with your actual WiFi and MQTT settings.
;
; IMPORTANT: platformio.ini is gitignored to protect your credentials

[env:esp32doit-devkit-v1]
platform = espressif32
board = esp32doit-devkit-v1
framework = arduino
monitor_speed = 115200
upload_port = /dev/ttyUSB0
monitor_port = /dev/ttyUSB0
build_flags =
	-DCONFIG_BT_ENABLED=1
	-DCONFIG_BLUEDROID_ENABLED=1
	'-DWIFI_SSID="${credentials.wifi_ssid}"'
	'-DWIFI_PASSWORD="${credentials.wifi_password}"'
	'-DMQTT_BROKER="${credentials.mqtt_broker}"'
	-DMQTT_PORT=${credentials.mqtt_port}
lib_deps =
	knolleary/PubSubClient@^2.8
	adafruit/Adafruit GFX Library@^1.11.3
	adafruit/Adafruit SSD1306@^2.5.7
	beegee-tokyo/DHT sensor library for ESPx@^1.19

[credentials]
wifi_ssid = YOUR_WIFI_SSID
wifi_password = YOUR_WIFI_PASSWORD
mqtt_broker = test.mosquitto.org
mqtt_port = 1883
